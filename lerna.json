{
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "bootstrap": {
      "hoist": "**"
    }
  },
  "ignoreChanges": [
    "**/changelog.md",
    "**/CHANGELOG.md",
    "**/package-lock.json",
    "**/yarn.lock",
    "**/test/**",
    "lerna.json",
    "readme.md"
  ],
  "publish": {
    "message": "chore(release): publish %s",
    "conventionalCommits": true,
    "createRelease": "github"
  }
}
